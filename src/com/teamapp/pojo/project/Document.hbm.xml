<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<!-- 最接近惯例的映射方式 -->
<hibernate-mapping package="com.teamapp.pojo.project">
	<class name="Document" table="t_document">
		<id name="id" column="document_id">
 			<generator class="identity"/><!-- 注意这里的生成方式p470 -->
	 	</id>
	 	<property name="name" column="document_name" length="50" type="string" not-null="true" />
	 	<property name="description" column="document_description" length="50" type="string" not-null="true" />
	 	<property name="filePath" column="document_file_path" length="50" type="string" not-null="true" />
	 	<!--many to one relation  -->
	 	<many-to-one name="uploader" class="com.teamapp.pojo.user.User" column="document_uploader" cascade="all"/>
	 	<property name="createdTime" column="document_created_time" length="50" type="date" not-null="true" />
	</class>
</hibernate-mapping>
