<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 最接近惯例的映射方式 -->
<hibernate-mapping package="com.teamapp.pojo.project">
	<class name="PList" table="t_plist">
		<id name="id" column="list_id">
			<generator class="identity" /><!-- 注意这里的生成方式p470 -->
		</id>
		<property name="isComplete" column="list_is_complete" length="50"
			type="boolean" not-null="true" />
		<property name="name" column="list_name" length="50" type="string"
			not-null="true" />
		<property name="description" column="list_description"
			length="50" type="string" />
		<property name="createdTime" column="list_created_time"
			length="50" type="date" not-null="true" />
		<property name="deadLine" column="list_deadline" length="50"
			type="date" not-null="true" />
		<property name="completedTime" column="list_completed_time"
			type="date" not-null="true" />
		<!--many to one relation -->
		<many-to-one name="leader" class="com.teamapp.pojo.user.User"
			column="list_leader" cascade="all" />
		<!--many to many relation -->
		<set name="tasks" table="t_plist_ptask">
			<!-- foreign key -->
			<key column="list_id" />
			<many-to-many class="PTask" column="task_id" />
		</set>
	</class>
</hibernate-mapping>
